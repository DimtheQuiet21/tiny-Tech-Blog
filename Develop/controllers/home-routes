const router = require('express').Router();
const { Gallery, Painting } = require('../models');
// TODO: Import the custom middleware
const getAuth = require('../utils/auth.js')
const getPast = require('../utils/pastdays.js')


/*
The first get call will call on page load and summon all the blog posts from the past seven days.
We have a middle ware function (to flex) and call that day information from Day JS and use it as a query parameter
*/
router.get('/', async (req, res ) => {
    try { 
        const today = dayjs();
        const days_ago = today.subtract(1, 'week');
        const dbBlogPostData = await BlogPost.findAll({
        where:{post_date :{[Op.gte]: days_ago}},
        include: [
          {
            model: Tag,
            attributes: ['tag_name'],
          },
        ],
      });
      const blog_posts = dbBlogPostData.map((posts) =>
      posts.get({ plain: true })
    );
    res.render('homepage', {
        blog_posts,
        loggedIn: req.session.loggedIn,
      });
    } catch (err) {
      console.log(err);
      res.status(500).json(err);
    }
  });

  module.exports = router;